<h1 class='mt-4 mb-3'>Create New Address</h1>

<%= form_tag "/profile/addresses" do %>
  <section class='form-group form-width'>
    <p>
      <%= label_tag :nickname %>
      <%= text_field_tag :nickname, @address.nickname, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :street %>
      <%= text_field_tag :street, @address.street, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :city %>
      <%= text_field_tag :city, @address.city, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :state %>
      <%= text_field_tag :state, @address.state, class: 'form-control' %>
    </p>

    <p>
      <%= label_tag :zip %>
      <%= text_field_tag :zip, @address.zip, class: 'form-control' %>
    </p>

    <p class='justify-content-center row'>
      <%= submit_tag 'Create Address', class: 'btn btn-primary mt-2' %>
    </p>
  </section>
<% end %>
